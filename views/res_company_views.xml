<odoo>
  <data>
    <record id="inherit_base_view_company_form_form" model="ir.ui.view">
      <field name="name">Company</field>
      <field name="model">res.company</field>
      <field name="inherit_id" ref="base.view_company_form"/>
      <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
          <page string="Cenoel theme config color" name="cenoel_theme_config_color">
            <group>
              <group>
                <field name="brand_primary"/>
              </group>
              <group>
                <field name="brand_secondary"/>
              </group>
            </group>
          </page>
        </xpath>
      </field>
    </record>
  </data>
</odoo>